{
    "extends": ["eslint:recommended", "google"],
    "env": {
        "es6": true,
        "amd": true,
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {"spread": true}
    },
    "rules": {
        "max-len": [2, 100, 4],
        "prefer-promise-reject-errors": "off",
        "arrow-parens": "off"
    }
}
